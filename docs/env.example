# ============================================================
# E-Commerce Platform - Environment Variables
# ============================================================
# Copy this file to .env and update values as needed
# ============================================================

# ============================================================
# Database Configuration
# ============================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=ecommerce
MYSQL_USER=ecommerce
MYSQL_PASSWORD=ecommerce123
MYSQL_ROOT_PASSWORD=root123

# ============================================================
# Redis Configuration
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================
# AWS Configuration (LocalStack for development)
# ============================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=localstack
AWS_SECRET_ACCESS_KEY=localstack
AWS_ENDPOINT_URL=http://localhost:4566

# S3 Buckets
S3_BUCKET_PRODUCTS=ecommerce-product-images
S3_BUCKET_ASSETS=ecommerce-assets

# SQS Queues
SQS_ORDER_CREATED_QUEUE=http://localhost:4566/000000000000/order-created-queue
SQS_ORDER_PAYMENT_QUEUE=http://localhost:4566/000000000000/order-payment-queue
SQS_ORDER_INVENTORY_QUEUE=http://localhost:4566/000000000000/order-inventory-queue

# SNS Topics
SNS_ORDER_EVENTS_TOPIC=arn:aws:sns:us-east-1:000000000000:order-events
SNS_PAYMENT_EVENTS_TOPIC=arn:aws:sns:us-east-1:000000000000:payment-events

# DynamoDB Tables
DYNAMODB_ORDER_EVENTS_TABLE=order-events
DYNAMODB_USER_SESSIONS_TABLE=user-sessions
DYNAMODB_AUDIT_LOGS_TABLE=audit-logs

# ============================================================
# Application Configuration
# ============================================================
APP_ENV=development
APP_DEBUG=true
APP_PORT=8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=86400

# ============================================================
# Email Configuration (Mailhog for development)
# ============================================================
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_FROM=noreply@ecommerce.local

# ============================================================
# External Services (for production)
# ============================================================
# STRIPE_API_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# ============================================================
# Monitoring & Logging
# ============================================================
LOG_LEVEL=DEBUG
ENABLE_METRICS=true
